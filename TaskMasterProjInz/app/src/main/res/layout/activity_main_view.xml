<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="al.taskmasterprojinz.MainView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/my_task_label"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:minHeight="35dp"
            android:text="@string/my_tasks"
            android:textColor="@color/my_text"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textSize="24dp"
            />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/menu_button"
            android:src="@mipmap/menu"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            style="@android:style/Holo.ButtonBar" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/clear_task_button"
            android:src="@mipmap/delete"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/menu_button"
            style="@android:style/Holo.ButtonBar" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/add_task_button"
            android:src="@mipmap/add_task"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/clear_task_button"
            style="@android:style/Holo.ButtonBar" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/calendar_button"
            android:src="@mipmap/calendar"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/add_task_button"
            style="@android:style/Holo.ButtonBar" />


    </RelativeLayout>





    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expandableListView"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
    />


</RelativeLayout>
